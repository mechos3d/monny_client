<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="*"
        android:background="#1177fa"
        >
        <TableRow
            android:layout_weight="0.5"
            android:gravity="center">
            <EditText
                android:id="@+id/author_override_dialog_text_field"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:inputType="text" />
        </TableRow>
        <TableRow
            android:layout_weight="0.5"
            android:gravity="center">
            <Button android:text="OK" android:id="@+id/author_override_dialog_ok" android:layout_width="fill_parent" android:layout_height="fill_parent"/>
        </TableRow>
    </TableLayout>
</LinearLayout>