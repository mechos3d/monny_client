<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="*"
        android:background="#1177fa"
        >
        <TableRow
            android:layout_weight="0.5"
            android:gravity="center">
            <TextView
                android:id="@+id/transfer_dialog_from_author_text"
                android:text="transfer FROM:"
                android:background="#ffffff"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:inputType="text" />
            <EditText
                android:id="@+id/transfer_dialog_from_author"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:inputType="text" />
        </TableRow>
        <TableRow
            android:layout_weight="0.5"
            android:gravity="center">
            <TextView
                android:id="@+id/transfer_dialog_to_author_text"
                android:text="transfer TO:"
                android:background="#ffffff"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:inputType="text" />
            <EditText
                android:id="@+id/transfer_dialog_to_author"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:inputType="text" />
        </TableRow>
        <TableRow
            android:layout_weight="0.5"
            android:gravity="center">
            <Button android:text="OK" android:id="@+id/transfer_dialog_ok" android:layout_width="fill_parent" android:layout_height="fill_parent"/>
            <!-- <Button android:text="CANCEL" android:id="@+id/transfer_dialog_cancel" android:layout_width="fill_parent" android:layout_height="fill_parent"/> -->
        </TableRow>
    </TableLayout>
</LinearLayout>